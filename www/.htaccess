#--------------------------------------------------
# Répertoire : /
#--------------------------------------------------

# Le serveur doit suivre les liens symboliques :
Options +FollowSymlinks

# Activation du module de réécriture d'URL :
RewriteEngine on

#-------------------------------------
# RE-ECRITURE DES ROUTES
#-------------------------------------
# ROUTE CONTACT
# PATTERN: /contact
# URL: index.php?contact
RewriteRule ^contact$ index.php?contact [L]

# ROUTE DETAIL D'UN POST
# PATTERN: /post/id
# URL: index.php?postId=xxx
RewriteRule ^posts\/([1-9][0-9]*)$ index.php?postId=$1 [L]

# ROUTE LISTE DES POSTS
# PATTERN: /posts
# URL: index.php
RewriteRule ^posts$ index.php [L]

# --------------------------------------------------
RewriteCond %{REQUEST_URI} !\.(js|css|jpg|gif|zip|png|pdf)$ [NC]
RewriteRule ^(.*)$ index.php [L]
